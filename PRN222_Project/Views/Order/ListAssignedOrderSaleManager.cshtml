@model ListOrderSaleManagerViewModel
@{
	Layout = "_AdminLayout";
}

@section Styles {
	<link rel="stylesheet" href="/css/ManagerStyle.css">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
