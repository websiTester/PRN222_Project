@model ForgetPasswordViewModel

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <link rel="stylesheet" href="/css/registerstyle.css" />

}

<section style="margin: 50px 0">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-lg p-4">
                    <div class="card-body">
                        <!-- Tiêu đề -->
                        <h2 class="text-center mb-4">Quên Mật Khẩu</h2>

                        <!-- Thông điệp thông tin -->
                        <p class="text-center text-muted mb-4">
                            Nếu bạn đã quên mật khẩu, bạn có thể sử dụng mẫu này để đặt lại mật khẩu. Bạn sẽ nhận được email với hướng dẫn.
                        </p>


                        <!-- Mẫu -->
                        <form method="post" action="/account/forgotpassword">
                            <!-- Nhập email -->
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-floating mb-3">
                                <input asp-for="@Model.Email" maxlength="255" type="email" class="form-control" placeholder="Email" required>
                                <label asp-for="@Model.Email" for="emailInput">Email</label>
                                <span asp-validation-for="@Model.Email" class="text-danger"></span>
                            </div>

                            <!-- Nút gửi -->
                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-primary btn-lg">Đặt Lại Mật Khẩu</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>