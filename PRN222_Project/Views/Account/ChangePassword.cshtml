@model ChangePasswordViewModel

@section Styles {
    <link rel="stylesheet" href="/css/profile.css">
}

<div class="container-xl px-4 mt-4">
    <hr class="mt-0 mb-4">
    <div class="row " style="margin-bottom: 40px">
        @await Html.PartialAsync("_ProfileSideBar", Model)
        <div class="col-lg-8">
            <!-- Change password card-->
            <div class="card mb-4">
                <div class="card-header">Change Password</div>

                    <div class="card-body">
                        <form action="/account/changepassword" method="POST">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <!-- Form Group (current password)-->
                            <div class="mb-3">
                                <label asp-for="CurrentPassword" class="small mb-1" >Current Password</label>
                                <input asp-for="CurrentPassword" maxlength="50" class="form-control" type="password" placeholder="Nhập mật khẩu hiện tại" required>
                                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                            </div>
                            <!-- Form Group (new password)-->
                            <div class="mb-3">
                                <label asp-for="NewPassword" class="small mb-1">New Password</label>
                                <input asp-for="NewPassword" maxlength="50" class="form-control" type="password" placeholder="Nhập mật khẩu mới" required>
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                            <!-- Form Group (confirm password)-->
                            <div class="mb-3">
                                <label class="small mb-1" asp-for="ConfirmPassword">Confirm New Password</label>
                                <input asp-for="ConfirmPassword" maxlength="50" class="form-control" type="password" placeholder="Xác nhận mật khẩu mới" required>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            @if (ViewBag.UpdateMessage != null)
                            {
                                <div>
                                    <span class="text-success">Update Success</span>
                                </div>
                            }
                        <button class="btn btn-dark" type="submit">Save</button>
                        </form>
                    </div>


            </div>
        </div>
    </div>
</div>
