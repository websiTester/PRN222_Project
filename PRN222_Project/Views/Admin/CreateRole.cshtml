@model CreateRoleViewModel

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <link rel="stylesheet" href="/css/registerstyle.css" />
}

@{
    ViewBag.Title = "Create new role";
}

<section style="margin: 40px 0" class="full-height">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-md-10 col-lg-8">
                <div class="card shadow-lg p-4">
                    <div class="card-body">
                        <h2 class="text-center mb-4">Create new role</h2>

                        <!-- Form -->
                        <form action="/admin/createrole" method="POST">
                            <div style="margin-left: 20px" asp-validation-summary="All" class="text-danger"></div>
                            <div class="row mb-4">
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input asp-for="RoleName" type="text" name="RoleName" class="form-control" id="RoleName" value="" placeholder="Role Name" maxlength="50">
                                        <label asp-for="RoleName" for="RoleName">Role Name</label>
                                        <span asp-validation-for="RoleName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Nút gửi trung tâm -->
                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-primary btn-lg">Create</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
