
<div class="col-xl-4">
	<!-- Profile picture card-->
	<div class="card mb-4 mb-xl-0">
		<div class="card-header">Avarta</div>
		<div class="card-body text-center">
			<!-- Profile picture image-->
			@if (Model!= null && Model.User != null && Model.User.ProfilePictureUrl != null)
			{
				<img style="height: 10rem; width: 10rem" class="img-account-profile rounded-circle mb-2"
					 src="data:image/png;base64,@Model.User.ProfilePictureUrl"
					 alt="Ảnh Đại Diện">
			}
			else
			{
				<img style="height: 10rem; width: 10rem" class="img-account-profile rounded-circle mb-2"
					 src="/img/ProductImg/wolf1.jpg"
					 alt="Ảnh Đại Diện">
			}


			<!-- Profile picture upload button-->
			<form action="/account/uploadimage" method="post" enctype="multipart/form-data">
				<input style="margin-left: 40px;" type="file" name="file" accept="image/*">
				<button class="btn btn-dark mt-3" type="submit">Upload</button>
				@if (ViewBag.ImageUploadError != null)
				{
					<div class="text-danger" style="margin-top: 10px;">@ViewBag.ImageUploadError</div>
				}
			</form>
		</div>
	</div>

	<div class="card mb-4 mb-xl-0" style="margin-top: 30px">
		<div class="card-body">
			<nav class="nav flex-column nav-pills nav-gap-y-1">
				<a href="/account/profile" class="nav-item nav-link has-icon nav-link-faded  is-active">
					Account Info
				</a>
				<a href="/account/changepassword" class="nav-item nav-link has-icon nav-link-faded">
					Security
				</a>
				<a href="/account/orderhistory" class="nav-item nav-link has-icon nav-link-faded">
					Order History
				</a>
				<a href="/account/address" class="nav-item nav-link has-icon nav-link-faded ">
					Address
				</a>
			</nav>
		</div>
	</div>
</div>