@model EditRoleViewModel

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <link rel="stylesheet" href="/css/registerstyle.css" />

    <link rel="stylesheet" href="/css/ManagerStyle.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous">
    <!-- Script Link Bootstrap -->

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- Font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

}

@{
    ViewBag.Title = "Create new role";
}

<section style="margin: 40px 0" class="full-height">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-md-10 col-lg-8">
                <div class="card shadow-lg p-4">
                    <div class="card-body">
                        <h2 class="text-center mb-4">Edit role</h2>

                        <!-- Form -->
                        <form action="/admin/editrole" method="POST">
                            <div style="margin-left: 20px" asp-validation-summary="All" class="text-danger"></div>
                            
                            <div class="row mb-4">
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input asp-for="Id" type="text" name="Id" 
                                        class="form-control" id="Id" placeholder="Role Id" 
                                        maxlength="50" disabled>
                                        <input asp-for="Id" type="text" name="Id" hidden>
                                        <label asp-for="Id" for="Id">Role Id</label>
                                        <span asp-validation-for="Id" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>



                            <div class="row mb-4">
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input asp-for="RoleName" type="text" name="RoleName" class="form-control" id="RoleName" placeholder="Role Name" maxlength="50">
                                        <label asp-for="RoleName" for="RoleName">Role Name</label>
                                        <span asp-validation-for="RoleName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Nút gửi trung tâm -->
                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-primary btn-lg">Edit</button>
                            </div>
                        </form>
                        <p class="d-inline-flex gap-1">
                            <div class="d-grid mb-3">
                                <button class="btn btn-primary btn-lg" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">User in this role</button>
                            </div>
                         
                        </p>
                        <div class="collapse" id="collapseExample">
                            <div class="row">
                                <div class="col-md-12">

                                    <!-- START products -->

                                    <div class="product">
                                        <div class="container products" style="padding: 5px;">
                                            <div>
                                                <nav class="navbar navbar-expand-lg bg-body-tertiary">
                                                    <div class="container-fluid">
                                                        <div class="">
                                                            <div class="edit">
                                                                <a asp-action="EditUserRole" asp-controller="admin" 
                                                                asp-route-roleId="@Model.Id"><i style="color: black;" class="fa-solid fa-pen"></i></a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </nav>
                                            </div>
                                            <table class="table">
                                                <thead>
                                                    <tr>
                                                        <th scope="col">STT</th>
                                                        <th scope="col">Tên tài khoản</th>
                                                        <th scope="col">Email</th>
                                                    </tr>
                                                </thead>
                                                <tbody>

                                                    @{
                                                        int i = 1;
                                                    }
                                                    <!-- START Product item -->
                                                    @foreach(User user in Model.UserList)
                                                    {
                                                   
                                                        <tr>
                                                            <td>@(i++)</td>
                                                            <td>@user.UserName</td>
                                                            <td>@user.Email</td>
                                                        </tr>
                                                    }
                                                    

                                                    <!-- END Product item -->



                                                </tbody>
                                            </table>
                                        </div>

                                    </div>
                                    <!-- END products -->


                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

           
        </div>

       
    </div>
</section>
