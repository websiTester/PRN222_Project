@model List<IdentityRole>

@{
    Layout = "_AdminLayout";
    ViewBag.Title = "List Role";
}



@section Styles {
    <link rel="stylesheet" href="/css/ManagerStyle.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous">
    <!-- Script Link Bootstrap -->

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- Font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

}
<div class="row">
    <!-- START Sales menu -->
    <div class="col-md-2">
        <div class="d-flex flex-column flex-shrink-0 p-3 text-bg-dark" style="position: absolute; width: 100%; height: 100%; min-height: 700px">
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="/admin/ListRole" class="nav-link text-white order-link active">
                        List Roles
                    </a>
                </li>
            </ul>
            <hr>
        </div>
    </div>
    <!-- END Sales menu -->

    <div class="col-md-10" style="padding: 40px;">

        <div class="product">
            <div class="container products" style="padding: 5px">
                <div style="margin-bottom: 20px">
                    <nav class="navbar navbar-expand-lg bg-body-tertiary">
                        <div class="container-fluid">
                            <h5 class="navbar-brand" href="#">All Roles</h5>
                            <div class="">
                                <div class="d-flex add" role="search">
                                    <a asp-action="createrole" asp-controller="admin"><i style="color: white;" class="fa-solid fa-plus"></i></a>
                                </div>
                            </div>
                        </div>
                    </nav>
                  
                </div>
                @if(Model.Count > 0)
                {
                    <div>
                        @foreach(var role in Model)
                        {
                            <div class="card mb-3">
                                <div class="card-header">
                                    Role Id: @role.Id
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">@role.Name</h5>
                                </div>
                                <div class="card-footer">
                                    <a asp-action="editrole" asp-controller="admin" 
									asp-route-id="@role.Id"
                                    class="btn btn-primary">Edit</a>            
                                </div>
                            </div>
                        }
                    </div>
                } else
                {

                    <div class="card">
                        <div class="card-header">
                            No roles created yet
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">
                                Use the button below to create a role
                            </h5>
                            <a asp-action="createrole" asp-controller="admin" class="btn btn-primary" style="width:auto; color:white">
                                Create Role
                            </a>
                        </div>
                    </div>
                    
                }


            </div>
        </div>
    </div>
</div>

